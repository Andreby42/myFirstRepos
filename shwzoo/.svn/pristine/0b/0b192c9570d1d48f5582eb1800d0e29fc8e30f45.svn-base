.pordctMain-list li:nth-child(2n) {
  padding: 0px;
  padding-left: 0.0rem;
}
.pordctMain-list li {
  width: 50%;
  float: left;
  padding-right: 0.04rem;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  margin-bottom: 0.01rem;
}
.pordctMain-list li:nth-child(2n) {padding-left: 1px;}
