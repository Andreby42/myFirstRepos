@charset "utf-8";
/* CSS Document */

.dpplb{ width:99.8%; margin:20px 0px;}
.dpplb table{ width:100%; border-collapse:collapse;}
.dpplb table tr td{ border:1px solid #D9D9D9; padding:10px 0px 10px 50px;}
.dpplb table tr.dpplb-title td{ padding:15px 0px 15px 30px; background:#E4E4E4; font-size:14px; font-weight:bolder;}
.star-lvs{ width:15px; height:15px; display:inline-block; background:url(../images/xing.png) no-repeat top left;}
.star-heis{ width:15px; height:15px; display:inline-block; background:url(../images/xing.png) no-repeat top right;}
.tp-list ul li{ width:160px; height:160px; float:left; margin:0px 20px 20px 0px; position:relative;}
.close-dpplb{ width:15px; height:15px; position:absolute; top:0px; right:0px; border:1px solid #BEBEBE; background:#ccc; line-height:15px; text-align:center; cursor:pointer;}
.comment-dpplb{ width:98%;}
.sorting-sz{ width:80px; float:left; text-align:center; font-size:26px; color:#C9CBCA; font-weight:bolder; clear:both;}
.comment-dpplb-con{ color:#575757; margin-left:80px;}
.comdp-con-top{ height:35px; line-height:35px;}
.comdp-con-top span{ margin-right:60px;}
.dpplb table tr td.plhf-dy{ padding:10px 0px;}
.additional{ padding:10px; background:#F0F0F0;}
.qianlan{ color:#009CE9;}
.comdp-con-top-title{ height:35px; line-height:35px;}
.time-reply{ padding:15px 0px; border-bottom:1px dashed #ABABAB; width:100%; position:relative;}
.reply-butcon{ width:65px; height:30px; position:absolute; top:10px; right:0px;}
.reply-but{ padding:5px 15px; background:#F0F0F0; border:1px solid #D9D9D9; border-radius:5px; color:#878787; letter-spacing:2px; font-size:14px; font-weight:bolder;}
.reply-con{ width:100%; margin-top:20px; display:none;}
.dpplb-text{ width:100%; height:200px; border:1px solid #D9D9D9;}
