package com.yinlian.api.app.dto;

import java.util.ArrayList;
import java.util.List;

public class ClassDto {
	
	public  ClassDto() {
		nextclass=new ArrayList<ClassDto>();
	}
	/**
	 * 标识id
	 */
	private int id;
	/**
	 * 名称
	 */
	private String name;
	/**
	 * 排序
	 */
	private Integer sort;
	/**
	 * 图片地址
	 */
	private String img;
	/**
	 * 下级分类
	 */
	private List<ClassDto> nextclass;
	/**
	 * 本级分类广告
	 */
	private List<Object> adv;

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public Integer getSort() {
		return sort;
	}

	public void setSort(Integer sort) {
		this.sort = sort;
	}

	public List<ClassDto> getNextclass() {
		return nextclass;
	}

	public void setNextclass(List<ClassDto> nextclass) {
		this.nextclass = nextclass;
	}

	public List<Object> getAdv() {
		return adv;
	}

	public void setAdv(List<Object> adv) {
		this.adv = adv;
	}

	public String getImg() {
		return img;
	}

	public void setImg(String img) {
		this.img = img;
	}
	
}
