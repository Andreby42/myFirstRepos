/* www.lanrenzhijia.com */

/* input */
.ipt {
	width: 72%;
    border: none;
    background: none;
    padding: 3% 3%;
	vertical-align: baseline;
	font-size: 0.24rem;
}
.ipt-mini {
	width: 140px;
	padding: 1px 3px;
}
/* btn */
.btn {
	position: relative;
	display: block;
    background: #3884FE;
    color: #FFFFFF;
    text-align: center;
    padding: 3.6% 0px;
    border-radius: 5px;
}

.btn-primary {
	border: none;
	color: #fff;
	width: 100%;
	font-size: 0.24rem;
}

/* www.lanrenzhijia.com */
.theme-buy {
	margin-top:10%;
	text-align: center;
}
.theme-gobuy, .theme-signin {
	font-size: 15px;
}
.theme-price {
	position: relative;
	bottom: -6px;
	font-family: microsoft yahei, Arial, Helvetica, sans-serif;
	margin-right: 20px;
	font-weight: bold;
	color: #f60;
	line-height: 32px;
	font-size: 24px;
	display: inline-block;
}
.theme-price dfn {
	font-style: normal;
	font-size: 18px;
	margin-right: 2px;
}
.theme-desc {
	padding: 30px;
}
.theme-version {
	padding: 30px;
}
.theme-popover-mask {
	z-index: 9998;
	position:fixed;
	top:0;
	left:0;
	width:80%;
	height:100%;
	background:#000;
	opacity:0.4;
	filter:alpha(opacity=40);
	display:none
}
.theme-popover {
	z-index:99999;
	position:fixed;
	top:0px;
	left:0px;
	width:100%;
	height:100%;
	margin:0px;
	background-color:#EEEEEE;
	display:none;
}
.theme-poptit {
	border-bottom:1px solid #ddd;
	padding: 0px 3%;
	position: relative;
	background: #393A3F;
	color: #fff;
	height: 0.8rem;
	line-height: 0.8rem;
}
.theme-poptit h3{float:left; font-style: normal;font-weight: normal;}
.theme-popbod {
	/*background: #FFFFFF;*/
    margin-top: 3%;
    border: 0px solid #CFCFCF;
    border-width: 1px 0px 0px;
}
.theme-popbom {
	padding:15px;
	background-color:#f6f6f6;
	border-top:1px solid #ddd;
	border-radius:0 0 5px 5px;
	color:#666
}
.theme-popbom a {
	margin-left:8px
}
.theme-poptit .close {
	/*float:left;*/
	color:#fff;
	/*padding:5px;
	margin:-2px -5px -5px;*/
	font:bold 14px/14px simsun;
	text-shadow:0 1px 0 #ddd;
	font-size: 0.4rem;
	float: left;
	line-height: 0.8rem;
	margin-right: 5%;
	position: relative;
    right: 0;
    padding: 0;
}
.btn.theme-reg {
	position: absolute;
	top: 8px;
	left: 43%;
	display: none
}
.inp-gray, .feed-mail-inp {
	border:1px solid #ccc;
	background-color:#fdfdfd;
	width:220px;
	height:16px;
	padding:4px;
	color:#444;
	margin-right:6px
}
.dform {
	
	text-align: center;
}
.dform .ipt_error {
	background-color:#FFFFCC;
	border-color:#FFCC66
}
.dform-tip {
	display:none;
	background-color:#080;
	color:#fff;
	line-height:42px;
	margin-top:10px;
display:;
	font-size: 14px;
}
.dform-tip-errer {
	background-color: #CF301A;
}
.dform-tip a {
	display: inline-block;
	padding: 0 20px;
	margin-left:10px;
	background-color: #FFE924;
	color: #CF301A;
}
.dform-login {
	padding:0;
	height: 270px;
	overflow: hidden;
}
.dform-login iframe {
	height: 470px;
	margin-top: -180px;
}
.theme-signin {
	text-align:left;
}
.theme-signin h4 {
	color:#999;
	font-weight:100;
	margin-bottom: 20px;
	font-size: 12px;
}
.theme-signin li {
	background: #fff;
	padding: 2% 3%;
    width: 94%;
    margin: 0px auto;
    border-bottom: 1px solid #E0E0E0;
    position: relative;
}
.theme-signin li strong {
	width: 20%;
    display: inline-block;
    font-weight: normal;
    font-size: 0.24rem;
}
.theme-signin .btn {
	margin-bottom: 10px;
}
.theme-signin p {
	font-size: 12px;
	color: #999;
}
.theme-desc, .theme-version {
	padding-top: 0
}
#div_errormessage{border: none;background: none;}
.theme-signin li:last-of-type{border: none;background: none;}
